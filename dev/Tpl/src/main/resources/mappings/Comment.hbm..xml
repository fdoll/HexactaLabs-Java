<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field">

	<class name="ar.com.hexacta.tpl.model.Comment" table="COMMENTS">
	
		<id name="id" column="COMMENT_ID">
			<generator class="identity" />
		</id>
		
		<property name="book" type="java.lang.String" />
		
		<property name="user" type="java.lang.String"/>
		
		<property name="body" type="java.lang.String"/>
		
	</class>
	
</hibernate-mapping>