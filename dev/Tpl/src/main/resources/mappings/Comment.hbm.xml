<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field">

	<class name="ar.com.hexacta.tpl.model.Comment" table="COMMENTS">
	
		<id name="id" column="COMMENT_ID">
			<generator class="identity" />
		</id>
		
		<many-to-one name="book" class="ar.com.hexacta.tpl.model.Book" fetch="select" lazy="false">
			<column name="BOOK_ID" not-null="true"/>
		</many-to-one> 
		<!--  <property name="bookId" column="BOOK_ID" />-->
			
		<property name="user" column="USER" />
		
		<property name="body" column="BODY" />		
		
	</class>
	
</hibernate-mapping>