<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field">

	<class name="ar.com.hexacta.tpl.model.BookCopy" table="BOOK_COPIES">
	
		<id name="id" column="BOOK_COPY_ID">
			<generator class="identity" />
		</id>
		
		<many-to-one name="book" class="ar.com.hexacta.tpl.model.Book" fetch="select" lazy="false">
			<column name="BOOK_ID" not-null="true"/>
		</many-to-one> 
			
		<property name="version" column="VERSION" />
		
		<property name="code" column="CODE" />
		
		<property name="state"	column="STATE"/>
		
		<property name="enabled" column="ENABLED" type="java.lang.Boolean"/>
		
		<property name="bookRate" column="BOOK_RATE"/>
	</class>
	
</hibernate-mapping>